{
  "extends": ["config:base"],
  "terraform": {
    "ignoreDeps": ["hashicorp/terraform"]
  },
  "packageRules": [
    {
      "datasources": ["terraform-provider"],
      "updateTypes": ["major"],
      "enabled": true,
      "dependencyDashboardApproval": true,
      "prCreation": "approval"
    },
    {
      "datasources": ["terraform-provider"],
      "matchFileNames": ["examples/**"],
      "enabled": true,
      "schedule": ["before 9am on monday"]
    },
    {
      "datasources": ["go"],
      "enabled": true,
      "schedule": ["before 9am on monday"]
    },
    {
      "datasources": ["github-actions"],
      "enabled": true,
      "schedule": ["before 9am on monday"]
    }
  ]
}